<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.vinuthana.vinvidyaadmin.activities.examsection.ExamMarksList">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/lynrlytStudentDetails"
    android:visibility="gone">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">
        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Class :"
            android:textColor="@color/card_text"
            android:textSize="18dp"
            android:textAlignment="center"
            android:layout_margin="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/tvEmresCls"
            android:text=""
            android:textSize="18dp"
            android:textAlignment="center"
            android:layout_margin="5dp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/card_text"
            android:textSize="18dp"
            android:textAlignment="center"
            android:text="Subject :"
            android:layout_margin="5dp"
           />
        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/tvEmressub"
            android:layout_margin="5dp"
            android:text=""
            android:textSize="18dp"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">
        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Max Marks :"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:textColor="@color/card_text"
            android:textSize="18dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/tvEmResMxMrks"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:text=""
            android:textSize="18dp"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Min Marks :"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:textColor="@color/card_text"
            android:textSize="18dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/tvEmresMinMarks"
            android:text=""
            android:textAlignment="center"
            android:textSize="18dp"
            android:layout_margin="5dp"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewSubRslt"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
