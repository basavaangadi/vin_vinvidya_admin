<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">
    <android.support.v7.widget.CardView
        android:id="@+id/crdVwParentMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="2sp"
        app:contentPadding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:id="@+id/lynrLytMsgDates">
            <TextView
                android:id="@+id/tvParentMeassageSentOn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="2dp"
                android:text="Message sent on"
                android:textColor="@color/card_text"
                android:textSize="12dp"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/tvParentMessageStaffRepliedDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="13dp"
                android:text="Replied date on"
                android:textColor="@color/card_text"
                android:textSize="12dp"
                android:layout_weight="1"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvParentMessageStudentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="13dp"
                android:text="Student Name"
                android:layout_below="@+id/lynrLytMsgDates"
                android:textColor="@color/card_text"
                android:textSize="12dp"
                />

            <TextView
                android:id="@+id/tvParentMessageClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="13dp"
                android:text="Class"
                android:layout_below="@+id/tvParentMessageStudentName"
                android:textColor="@color/card_text"
                android:textSize="12dp"
                />


            <TextView
                android:id="@+id/tvParentMessageMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvParentMessageStudentName"
                android:layout_marginTop="10dp"
                android:text="Message"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvParentMessageResponse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tvParentMessageMessage"
                android:layout_marginTop="10dp"
                android:text="Response"
                android:textColor="@color/colorPrimary" />

                <Button
                    android:id="@+id/btnParentMessageEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:layout_below="@+id/tvParentMessageResponse"
                    android:background="@drawable/button_green"
                    android:text="@string/key_Edit"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18dp"/>



        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
