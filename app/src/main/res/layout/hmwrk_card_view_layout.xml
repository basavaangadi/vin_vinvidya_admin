<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/crdViewCurHmWrk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:contentPadding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
            <TextView
                android:id="@+id/tvDateHmCrd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Date : "

                android:textColor="@color/colorPrimary"
                android:textSize="18dp"
                android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tvClassHmCrd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Class : "

                    android:textColor="@color/colorPrimary"
                    android:layout_weight="1"
                    android:textSize="18dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvChptNameHmCrd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Chapter Name"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tvHomeWorkHmCrd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Home Work"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tvSubjectHmCrd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Subject"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!--<TextView
                    android:id="@+id/tvClassHmCrd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Class"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18dp"
                    android:layout_weight="1"/>-->

                <TextView
                    android:id="@+id/tvClassIdHmCrd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Class"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:visibility="invisible"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tvHmWrkIdHmCrd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Class"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:visibility="invisible"
                    android:layout_weight="1"/>

            </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="3"
    >
    <Button
        android:id="@+id/btnHmwrkEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#4CAF50"
        android:text="@string/key_Edt"
        android:layout_marginBottom="5dp"
        android:layout_weight="1.5"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="18sp"/>
    <Button
        android:id="@+id/btnHmwrkFedback"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#cd036ce5"
        android:text="@string/key_Fed"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:layout_marginBottom="5dp"

        android:textSize="18sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_weight="1.5"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        />
    <Button
        android:id="@+id/btnHmwrkDelete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FF8C00"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="5dp"
        android:text="@string/key_Del"
        android:visibility="gone"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="18sp"/>
</LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
