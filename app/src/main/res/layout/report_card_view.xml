<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/crdViewReport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:contentPadding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Class : "

                android:textColor="@color/colorPrimary"
                android:layout_weight="1"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tvReportCardViewClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_weight="1"
                android:text="dffds"

                android:textColor="@color/colorPrimary"
                android:textSize="18dp" />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_weight="1"
                android:text="Period : "

                android:textColor="@color/colorPrimary"

                android:textSize="18dp" />

            <TextView
                android:id="@+id/tvReportCardViewPeriod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_weight="1"

               android:text="rere"

                android:textColor="@color/colorPrimary"
                android:textSize="18dp" />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Subject : "


                android:textColor="@color/colorPrimary"
                android:textSize="18dp" />
                <TextView
                    android:id="@+id/tvReportCardViewSubject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"



                    android:textColor="@color/colorPrimary"
                    android:textSize="18dp" />
        </LinearLayout>


            <TextView
                android:id="@+id/tvReportCardViewReport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Report"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:id="@+id/LnyrLytReport"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">
                <Button
                    android:id="@+id/btnReportCardViewEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="2"
                    android:paddingRight="5dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@drawable/edit_btn_shape"
                    android:text="@string/key_Edt"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18dp"/>

                <Button
                    android:id="@+id/btnReportCardViewDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/delete_btn_shape"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:paddingRight="5dp"
                    android:paddingLeft="15dp"
                    android:visibility="gone"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="@string/key_Del"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18dp"/>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
