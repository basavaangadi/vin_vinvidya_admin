<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.examsectionfragment.ScheduleToBeSetFragment"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Exam"
        android:textColor="@color/white"
        android:textSize="18dp" />
    <Spinner
        android:id="@+id/spnrExmSchdlToBeSetExam"
        style="@android:style/Widget.Holo.Light.Spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/white"
        android:popupBackground="#ffffff" />
    <Button
        android:id="@+id/btnSchdlToBeEntered"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_shape"
        android:text="@string/key_btn_get_Classwise_Subject"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewExmSchByExam"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp" />

</LinearLayout>