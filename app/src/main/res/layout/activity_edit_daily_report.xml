<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.dayatoday.EditDailyReportActivity"
    android:orientation="vertical"
    android:background="@color/colorPrimary">
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:weightSum="4"
         android:layout_margin="10dp">
         <TextView
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:text="Class"
             android:textSize="16dp"
             android:textColor="@color/btnTxtColor"
             />
         <TextView
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:textColor="@color/white"
             android:textSize="18dp"
             android:id="@+id/tvEditDailyReportClass"/>
         <TextView
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:textSize="16dp"
             android:textColor="@color/btnTxtColor"
             android:text="Subject"
             />
         <TextView
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:textColor="@color/white"
             android:textSize="16dp"
             android:id="@+id/tvEditDailyReportSubject"/>

     </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Period"
            android:textSize="16dp"
            android:textColor="@color/btnTxtColor"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:textSize="16dp"
            android:id="@+id/tvEditDailyReportPeriod"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Date"
            android:textSize="16dp"
            android:textColor="@color/btnTxtColor"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:id="@+id/tvEditDailyReportDate"/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"

        android:text="Report :"
        android:textSize="18dp"
        android:textColor="@color/btnTxtColor"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="18dp"
        android:id="@+id/edtxbEditDailyReport"
        android:hint="Report"
        android:textColorHint="@color/white"
        android:cursorVisible="true"
        android:textCursorDrawable="@drawable/black_cursor"
        android:textColor="@color/white"

        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnEditDailyReport"
        android:background="@drawable/btn_shape"
        android:text="Edit Daily Report"
        android:layout_margin="10dp"
        android:textColor="@color/white"/>
</LinearLayout>