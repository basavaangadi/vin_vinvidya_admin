<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/crdviewStudLeaveDisp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="2sp"
        app:contentPadding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvStudLeaveDispFromDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="2dp"
                android:text="From"
                android:layout_marginLeft="5dp"
                android:textColor="@color/card_text"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tvStudLeaveDispToDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"

                android:layout_marginRight="13dp"

                android:text="To"
                android:textColor="@color/card_text"
                android:textSize="12dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvStudLeaveStudentName"
                android:layout_below="@+id/tvStudLeaveDispFromDate"
                android:text="StudentName"
                android:textSize="18dp"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:id="@+id/tvStudLeaveDispTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvStudLeaveStudentName"
                android:layout_marginTop="10dp"
                android:text="Reason"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvStudLeaveDispDisc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tvStudLeaveDispTitle"
                android:layout_marginTop="10dp"
                android:text="Description"
                android:textColor="@color/colorPrimary" />



        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
