<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".fragments.daytodayfragment.StaffwiseDayReportFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Select Staff"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <Spinner
        android:id="@+id/spnrStaffwiseDayReportStaffList"
        style="@android:style/Widget.Holo.Light.Spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/white"
        android:popupBackground="#ffffff" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtStaffwiseDayReportDate"
        android:hint="Date"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:textColorHint="@color/white"/>

    <Button
        android:id="@+id/btnGetStaffwiseDayReport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/button_shape"
        android:text="@string/key_btn_get_notice"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerStaffwiseDayReport"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"/>
    </LinearLayout>
    </ScrollView>
</FrameLayout>