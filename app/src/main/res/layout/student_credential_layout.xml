<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/crdVwParentMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="2sp"
        app:contentPadding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">
            <TextView
                android:id="@+id/tvStudentCredentialsByStudRollNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_marginTop="2dp"
                android:text="Roll no"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tvStudentCredentialsByStudStudentName"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tvStudentCredentialsByStudRollNo"
                android:visibility="gone"
                android:layout_marginLeft="5dp"
                android:text="Student Name"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp" />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2.5"
                android:id="@+id/lynrLytPhnoClass"
                android:layout_below="@id/tvStudentCredentialsByStudRollNo">
            <TextView
                android:id="@+id/tvStudentCredentialsByStudPhno"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvStudentCredentialsByStudStudentName"
                android:layout_marginTop="10dp"
                android:text="Ph no"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tvStudentCredentialsByStudClass"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toRightOf="@+id/tvStudentCredentialsByStudPhno"
                android:layout_marginTop="10dp"
                android:text="class"
                android:textSize="16dp"
                android:textColor="@color/colorPrimary" />
            </LinearLayout>
            <TextView
                android:id="@+id/tvStudentCredentialsByPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/lynrLytPhnoClass"
                android:layout_marginTop="10dp"
                android:text="password"
                android:textSize="16dp"
                android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/btnGetStudentCredentialsByStudEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:layout_below="@+id/tvStudentCredentialsByPassword"
                android:background="@drawable/button_green"
                android:text="@string/key_Edit"
                android:textAllCaps="false"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="18dp"/>



        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
