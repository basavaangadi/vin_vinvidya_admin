<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/crdVwParentNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="2sp"
        app:contentPadding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvPrtNtNoteOnDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="2dp"
                android:text="Note On Date"
                android:textColor="@color/card_text"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tvPrtNtNoteSentDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="13dp"
                android:text="Note Sent Date"
                android:textColor="@color/card_text"
                android:textSize="12dp" />
            <!--<TextView
                android:id="@+id/tvParentMessageStudentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tvPrtNtNoteSentDate"
                android:layout_marginTop="10dp"
                android:text="Student Name"
                android:textSize="18dp"
                android:textColor="@color/colorPrimary" />-->

            <TextView
                android:id="@+id/tvPrtNtNoteTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"

                android:layout_alignParentStart="true"
                android:layout_below="@+id/tvPrtNtNoteSentDate"
                android:layout_marginTop="10dp"
                android:text="Title"
                android:textSize="18dp"
                android:textColor="@color/colorPrimary" />


            <TextView
                android:id="@+id/tvPrtNtNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tvPrtNtNoteTitle"
                android:layout_marginTop="10dp"
                android:text="Note"
                android:textSize="18dp"
                android:textColor="@color/colorPrimary" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_below="@id/tvPrtNtNote">
                <Button
                    android:id="@+id/btnParentNoteEdit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:layout_below="@+id/tvPrtNtNote"
                    android:background="@drawable/edit_btn_shape"
                    android:text="@string/key_Edit"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18dp"/>

            <Button
                android:id="@+id/btnParentNoteDelete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:layout_below="@+id/tvPrtNtNote"
                android:background="@drawable/delete_btn_shape"
                android:visibility="gone"
                android:text="@string/key_Del"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18dp"/>

            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
